import numpy as np
from numpy.linalg import matrix_power

from numpy import linalg  as la

from scipy import linalg  as scla

p_3 = np.array([[0.3,0.2,0.5,0], 
                [0.3,0.4,0.3, 0],
                [0,0,0.6,0.4],
                [0,0,0.5,0.5]
                ]) 

p101 = matrix_power(p_3, 101)

print (p101)